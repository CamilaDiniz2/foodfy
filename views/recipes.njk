{% extends "layout.njk" %}

  {% block head %}
      <title> .: Receitas - Foodfy </title>
  {% endblock %}

{% block content %}

<div class="mais-acessadas">

  <div class="pedidos-acessados">

    {% for item in items %}
    
    <div class="pedido" id = {{item.id}}>
      <img src="{{item.image}}" alt="Foto de {{item.title}}">
      <p class="title">{{item.title}}</p>
      <p class="subtitle">{{item.author}}</p>
    </div>
    {% endfor %}
   
  </div>
</div>

<script src="main.js"></script>

{% endblock %}
